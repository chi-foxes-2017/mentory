

<%= render '/shared/error_messages' %>

<div class="row">
  <div class="col s8 push-s2">
    <% if @pairing.mentor_id == current_user.id %>
      <h1>Edit this Pairing</h1>
      <%= form_for :pairing, url: user_pairing_path(@pairing), method: :patch do |f| %>
        <p>
          <%= f.label :start_time %><br>
          <%= f.text_field :start_time %>
        </p>

        <p>
          <%= f.submit %>
        </p>
      <% end %>
    <% else %>
    <h1>Add a topic for your pairing </h1>
      <%= form_for :pairing, url: user_pairing_path(@pairing), method: :patch do |f| %>
        <p>
          <%= f.label :topic %><br>
          <%= f.text_field :topic %>
        </p>
        <p>
          <% f.hidden_field :mentee_id, value: current_user.id %>
        </p>
        <p>
          <%= f.submit %>
        </p>
      <% end %>
    <% end %>
  </div>
</div>
